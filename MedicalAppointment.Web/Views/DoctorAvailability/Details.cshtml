@model YourNamespace.Models.DoctorAvailabilityModel

@{
    ViewData["Title"] = "Doctor Availability Details";
}

<h1 class="text-center my-4">Doctor Availability Details</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Doctor ID</th>
                        <td>@Model.DoctorId</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Specialty</th>
                        <td>@Model.Specialty</td>
                    </tr>
                    <tr>
                        <th>Available Date</th>
                        <td>@Model.AvailableDate?.ToString("yyyy-MM-dd")</td>
                    </tr>
                    <tr>
                        <th>Start Time</th>
                        <td>@Model.StartTime?.ToString("HH:mm")</td>
                    </tr>
                    <tr>
                        <th>End Time</th>
                        <td>@Model.EndTime?.ToString("HH:mm")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-warning me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
