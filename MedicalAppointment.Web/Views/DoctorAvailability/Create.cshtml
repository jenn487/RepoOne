@model YourNamespace.Models.DoctorAvailabilityModel

@{
    ViewData["Title"] = "Create Doctor Availability";
}

<h1 class="text-center my-4">Create Doctor Availability</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="DoctorId" class="form-label fw-bold">Doctor ID</label>
                    <input asp-for="DoctorId" class="form-control" placeholder="Enter doctor ID" />
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Specialty" class="form-label fw-bold">Specialty</label>
                    <input asp-for="Specialty" class="form-control" placeholder="Enter specialty" />
                    <span asp-validation-for="Specialty" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AvailableDate" class="form-label fw-bold">Available Date</label>
                    <input asp-for="AvailableDate" class="form-control" type="date" />
                    <span asp-validation-for="AvailableDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StartTime" class="form-label fw-bold">Start Time</label>
                    <input asp-for="StartTime" class="form-control" type="time" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EndTime" class="form-label fw-bold">End Time</label>
                    <input asp-for="EndTime" class="form-control" type="time" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary w-100">Save Availability</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

